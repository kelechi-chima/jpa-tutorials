<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">
  
  <persistence-unit name="client-invoicing" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <!-- Supplied by Spring. Enables easy substitution for test purposes. -->
    <!-- <jta-data-source>java:/ClientInvoicingDS</jta-data-source> -->
    
    <class>org.afrosoft.clientinvoicing.domain.Contact</class>
    <class>org.afrosoft.clientinvoicing.domain.Address</class>
    <class>org.afrosoft.clientinvoicing.domain.Client</class>
    <class>org.afrosoft.clientinvoicing.domain.Project</class>
    <class>org.afrosoft.clientinvoicing.domain.Employee</class>
    <class>org.afrosoft.clientinvoicing.domain.Timesheet</class>
    
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform"/>
    </properties>
  </persistence-unit>
  
</persistence>